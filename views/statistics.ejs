<h3>Reminder Email</h3>

<form novalidate="novalidate" id="reminder-form" method="POST" action="/reminder">

  <div class="form-group">
    <label for="session_desc">Betreff</label>
    <input type="text" class="form-control" id="subject" name="subject">
  </div>

  <div class="form-group">
    <textarea class="form-control" id="text" name="text"></textarea>
  </div>

  <div class="checkbox">
    <label>
      <input id="links" name="links" type="checkbox" value="true"> <span>Liste mit Links zum Abmelden der Email hinzufügen</span>
    </label>
  </div>

  <div class="checkbox">
    <label>
      <input id="testmail" name="testmail" type="checkbox" value="true"> <span>Testmail</span>
    </label>
  </div>

  <div class="form-actions" style="margin-top:40px">
    <input id="remind" class="btn btn-large btn-success" value="Reminder ausschicken" type="submit" style="height:50px" disabled="disabled">
  </div>
</form>

