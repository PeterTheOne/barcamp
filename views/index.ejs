<% } else { %>
  <link rel="stylesheet" href="/css/barcamp.min.css">
<% } %>
  </head>

  <body>
  
  <ul id="tagcloud">

<% for(var i=0; i<tags.length; i++) {%>
   <li value="<%= tags[i].count %>" title="<%= tags[i].name %> "><%= tags[i].name %></li>
<% } %>

  </ul>
	
