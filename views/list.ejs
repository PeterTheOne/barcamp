<% layout('layout') -%>
<% block('title', "Teilnehmer | BarCamp Graz 2015") %>

<div class="page-header">
  <h2>Teilnehmer BarCamp Graz 2015</h2>
</div>

<% if (users.length > 0) { %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Bevorzugtes Camp</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(u, i) { %>
      <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= u.getFullname() %></td>
        <td>
        <% if (u.preferredCamp != "none") { %>
          <%= u.preferredCamp %>
        <% } %>
        </td>
        <td>
          <% if (u.twitter) { %> <a href="https://twitter.com/<%= u.twitter %>" target="_blank"><i class="fa fa-twitter-square"></i></a> <% } %>
          <% if (u.facebook) { %> <a href="https://www.facebook.com/<%= u.facebook %>" target="_blank"><i class="fa fa-facebook-square"></i></a> <% } %>
          <% if (u.google_plus) { %> <a href="https://plus.google.com/+<%= u.google_plus %>" target="_blank"><i class="fa fa-google-plus-square"></i></a> <% } %>
          <% if (u.website) { %> <a href="<%= u.website %>" target="_blank"><i class="fa fa-home"></i></a> <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

<% } else { %>

  <p>Es liegen noch keine Anmeldungen vor.</p>

<% } %>
